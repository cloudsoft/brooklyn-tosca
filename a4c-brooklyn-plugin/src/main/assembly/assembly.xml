<assembly>
    <id>assemble-plugin</id>
    <formats>
        <format>zip</format>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target/classes</directory>
            <lineEnding>keep</lineEnding>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**/**</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <!-- Path relative to module. -->
            <source>../brooklyn-tosca-transformer/src/main/resources/brooklyn/types/brooklyn-types.yaml</source>
            <outputDirectory>brooklyn/types</outputDirectory>
            <lineEnding>keep</lineEnding>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <outputDirectory>lib</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>
